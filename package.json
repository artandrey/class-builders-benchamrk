{
  "name": "my-typescript-starter",
  "version": "1.0.0",
  "description": "Typescript starter for my projects",
  "scripts": {
    "start:dev": "tsc --watch -p tsconfig.src.json",
    "test:dev": "vitest",
    "test": "vitest run",
    "lint": "eslint --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "build": "tsc",
    "bench": "vitest bench"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add -p"
    ],
    "**/*.{ts,tsx}": "tsc-files --noEmit"
  },
  "keywords": [],
  "author": "Andrii Artemenko",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.1",
    "tsc-files": "^1.1.4",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0",
    "vitest": "^2.1.6"
  },
  "dependencies": {
    "builder-pattern": "^2.2.0",
    "builder-ts": "^0.2.3",
    "class-constructor": "^0.2.2"
  }
}
